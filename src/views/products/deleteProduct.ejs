<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Productos</title>
    <link href="/css/home.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
</head>

<body>
    <%- include('../partials/header.ejs') %>
        <main>
           
            <h2>Elige el producto a eliminar</h2>

            <section>
                <% for(let i=0; i < productos.length; i++){%>
                    <div class="product">

                        </h3>
                        <%if(productos[i].image.includes('http')){%>
                            <img src="<%= productos[i].image %>" alt="img" width="200px" height="200px">
                            <%}else{%>
                                <img src="/images/<%= productos[i].image %>" alt="img" width="200px" height="200px">
                                <%}%>
                                    <h3>
                                        <%= productos[i].name %>
                                    </h3>
                                    <p>
                                        <%= productos[i].price %>
                                    </p>
                                    <p>
                                        <%= productos[i].description %>
                                    </p>
                                    <form action="/productos-eliminar/<%= productos[i].id %>?_method=DELETE" method="POST">
                                        <button type="submit">Eliminar</button>
                                    </form>
                    </div>

                    <%}%>
            </section>
        </main>
        <%- include('../partials/footer.ejs') %>
</body>

</html>